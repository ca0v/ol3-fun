{
  "name": "ol3-fun",
  "type": "module",
  "version": "6.9.0",
  "description": "OpenLayers Functions",
  "main": "built/index.js",
  "scripts": {
    "build:examples": "esbuild examples/index.ts --outfile=examples/index.js --bundle --sourcemap --format=esm",
    "build:it": "esbuild index.ts --outfile=index.js --bundle --sourcemap --format=esm",
    "build:tests": "esbuild tests/index.ts --outfile=tests/index.js --bundle --minify --sourcemap",
    "build": "npm-run-all -p build:it build:examples build:tests",
    "clean": "rm -r ./built",
    "dev:examples": "npm-run-all watch:build:examples watch:examples",
    "dev:tests": "npm-run-all -p watch:build:tests watch:tests",
    "dev": "npm-run-all -p dev:examples dev:tests lint",
    "doc": "typedoc --out ./built/docs --tsconfig ./tsconfig.json --readme none --ignoreCompilerErrors --exclude ./node_modules/**",
    "lint:examples": "tsc examples/index.ts --noEmit --allowJs --skipLibCheck",
    "lint:it": "tsc index.ts --noEmit --allowJs --skipLibCheck",
    "lint:tests": "tsc tests/index.ts --noEmit --allowJs --skipLibCheck",
    "lint": "npm-run-all -p lint:it lint:tests lint:examples",
    "postinstall2": "npm run build:it",
    "precommit": "npm-run-all clean lint build test",
    "watch:build:examples": "npm run build:examples -- --watch",
    "watch:build:tests": "npm run build:tests -- --watch",
    "watch:examples": "live-server --port=5001 --wait=200 --watch=./built/*.max.js --open=\"loaders/tests.html?debug=1&theme=dark\"",
    "watch:tests": "live-server --port=5000 --wait=200 --watch=./built/*.max.js --open=\"./loaders/tests.html?debug=1&theme=dark&test=*\" --browser=CHROME",
    "test": "npm run watch:tests",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ca0v/ol3-fun.git"
  },
  "keywords": [
    "OpenLayers"
  ],
  "author": "coreyalix@hotmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ca0v/ol3-fun/issues"
  },
  "homepage": "https://github.com/ca0v/ol3-fun/blob/v6.9.0/README.md",
  "dependencies": {
    "@ca0v/ceylon": "github:ca0v/ceylon#v1.0.2",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/jquery": "^3.5.8",
    "commitlint": "^15.0.0",
    "esbuild": "^0.13.14",
    "husky": "^7.0.4",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "ol": "^6.9.0",
    "typescript": "^4.4.4",
    "vite": "^2.6.14"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "jquery": "^3.6.0",
    "mocha": "^9.1.3",
    "typedoc": "^0.12.0"
  }
}
