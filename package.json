{
  "name": "ol3-fun",
  "type": "module",
  "version": "6.9.0",
  "description": "OpenLayers Functions",
  "main": "built/index.js",
  "scripts": {
    "before-push": "npm-run-all clean lint build test",
    "build:examples": "esbuild examples/index.ts --outfile=examples/index.js --bundle --minify --sourcemap",
    "build:it": "esbuild index.ts --outfile=index.js --bundle --minify --sourcemap",
    "build:tests": "esbuild tests/index.ts --outfile=tests/index.js --bundle --sourcemap",
    "build": "npm-run-all -p build:it build:examples build:tests",
    "clean": "rm -r ./built",
    "dev:examples": "npm run build:examples && start npm run live:examples && npm run build:examples -- -w",
    "dev:tests": "npm-run-all -p build:tests live:tests build:tests -- -w",
    "doc": "typedoc --out ./built/docs --tsconfig ./tsconfig.json --readme none --ignoreCompilerErrors --exclude ./node_modules/**",
    "lint:examples": "tsc examples/index.ts",
    "lint:it": "tsc index.ts",
    "lint:tests": "tsc tests/index.ts",
    "lint": "npm-run-all -p lint:it lint:tests lint:examples",
    "live:examples": "live-server --port=5001 --wait=200 --watch=./built/*.max.js --open=\"loaders/tests.html?debug=1&theme=dark\"",
    "live:tests": "live-server --port=5000 --wait=200 --watch=./built/*.max.js --open=\"./loaders/tests.html?debug=1&theme=dark&test=*\" --browser=CHROME",
    "postinstall2": "npm run build:it",
    "test": "npm run live:tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ca0v/ol3-fun.git"
  },
  "keywords": [
    "OpenLayers"
  ],
  "author": "coreyalix@hotmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ca0v/ol3-fun/issues"
  },
  "homepage": "https://github.com/ca0v/ol3-fun/blob/v6.9.0/README.md",
  "dependencies": {
    "@ca0v/ceylon": "github:ca0v/ceylon#v1.0.2",
    "@types/jquery": "^3.5.8",
    "@types/ol": "^6.5.3",
    "esbuild": "^0.13.14",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "ol": "^6.9.0",
    "typescript": "^4.4.4",
    "vite": "^2.6.14"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "jquery": "^3.6.0",
    "mocha": "^9.1.3",
    "typedoc": "^0.12.0"
  }
}
